<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="left"
        android:layout_height="119dp"
        android:orientation="horizontal"
        android:padding="1dp">
        <ImageView
            android:id="@+id/imageevent1"
            android:layout_width="120dp"
            android:layout_height="115dp"

            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="140dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/even_nom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Evennom"
                android:inputType="text"
                android:letterSpacing="0.1"
                android:textColor="#000000"
                android:textColorHint="#591414"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/even_description"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Evendesctption"
                android:textColorHint="#000000"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:letterSpacing="0.1"
                android:textSize="12dp"
                android:inputType="text"
                android:textColor="#000000" />
            <CheckBox
                android:id="@+id/interiseevn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:textColorHint="#000000"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:letterSpacing="0.1"
                android:textSize="16dp"
                android:inputType="text"
                android:textColor="#000000"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/edit_even"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cherch"
            android:layout_marginLeft="15dp"
            android:layout_gravity="right"/>
        <ImageView
            android:id="@+id/delet_even"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/supprimer"
            android:layout_marginLeft="15dp"
            android:layout_gravity="right"/>
        </LinearLayout>











    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4a5a71"></LinearLayout>
</LinearLayout>