<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="left"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp">



            <TextView
                android:id="@+id/cours_nom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="cccc"
                android:inputType="text"
                android:letterSpacing="0.1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/cours_matiere"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="cccc"
                android:textColorHint="#000000"
                android:layout_marginLeft="5dp"
                android:background="#00000000"
                android:letterSpacing="0.1"
                android:textSize="16dp"
                android:inputType="text"
                android:textColor="#000000" />

        <ImageView
            android:id="@+id/edit_cours"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cherch"
            android:layout_marginLeft="15dp"
            android:layout_gravity="right"
            />
        <ImageView
            android:id="@+id/delet_cours"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/supprimer"
            android:layout_marginLeft="15dp"
            android:layout_gravity="right"/>
        <ImageView
            android:id="@+id/download_cours"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/telecharger"
            android:layout_marginLeft="15dp"
            android:layout_gravity="right"
            />












    </LinearLayout>
</LinearLayout>